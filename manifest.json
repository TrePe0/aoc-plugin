{
    "name": "AoC Time Logger",
    "version": "1.0",
    "description": "Logs time when user opens the task",
    "permissions": [
        "storage",
        "activeTab",
        "tabs",
        "https://adventofcode.com/",
        "https://rb5ncgzaxj.execute-api.eu-central-1.amazonaws.com/"
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "content_scripts": [{
        "matches": ["https://adventofcode.com/*"],
        "js": ["content.js"]
    }],
    "icons": {
        "16": "images/aoc16.png",
        "32": "images/aoc32.png",
        "48": "images/aoc48.png",
        "128": "images/aoc128.png"
    },
    "manifest_version": 2,
    "browser_specific_settings": {
        "gecko": {
          "id": "{aaf1b8ea-aca7-4fbe-aa96-77ecbfa4854c}"
        }
    }
}
