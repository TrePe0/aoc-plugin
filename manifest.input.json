{
    "common": {
        "name": "AoC Time Logger",
        "version": "2.1.10",
        "description": "Logs time when user opens the task",
        "content_scripts": [{
            "matches": ["https://adventofcode.com/*"],
            "js": ["content.js"]
        }],
        "icons": {
            "16": "images/aoc16.png",
            "32": "images/aoc32.png",
            "48": "images/aoc48.png",
            "128": "images/aoc128.png"
        }
    },
    "chrome": {
        "manifest_version": 3,
        "permissions": [
            "storage",
            "activeTab",
            "tabs"
        ],
        "host_permissions": [
            "https://adventofcode.com/",
            "https://7b79gj2si4.execute-api.eu-central-1.amazonaws.com/"
        ],
        "background": {
            "service_worker": "background.js"
        }
    },
    "firefox": {
        "manifest_version": 2,
        "permissions": [
            "storage",
            "activeTab",
            "tabs",
            "https://adventofcode.com/",
            "https://7b79gj2si4.execute-api.eu-central-1.amazonaws.com/"
        ],
        "background": {
            "scripts": ["background.js"],
            "persistent": false
        },
        "browser_specific_settings": {
            "gecko": {
                "id": "{aaf1b8ea-aca7-4fbe-aa96-77ecbfa4854c}"
            }
        }
    }
}
